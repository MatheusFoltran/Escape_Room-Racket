; Fun√ß√£o que verifica se o enigma foi completado corretamente!
(define (resolver-enigma enigma resposta)
  (cond
    [(empty? enigma)
     #t]

    [else
     (and
      (equal? (first enigma) (first resposta))
      (resolver-enigma (rest enigma) (rest resposta)))]
    )
  ) 


