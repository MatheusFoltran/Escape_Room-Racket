;; ############################################ FUN√á√ïES DO ENIGMA PILHA DE PRATOS ##################################################

; Inst√¢ncia de pilha-suja
(define pilha-suja (list 1 2 3 4 5 6))

; Vari√°vel intermediario entre prato-sujo e prato-limpo.
(define lavar void)

; Inst√¢ncia de pilha-limpa
(define pilha-limpa '())


;; Fun√ß√£o de desempilhar
(define (desempilha)
  (cond
    [(not (equal? lavar void)) ; Verifica se o intermediario tem algum item desempilhado.
     void]

    [else
     (set! lavar (ultimo pilha-suja))
     (set! pilha-suja (desempilha-rec pilha-suja))]
    )
  )


; Retorna o elemento que ser√° desempilhado
(define (ultimo pilha)
  (if (empty? (rest pilha))
      (first pilha) ; Retorna o √∫ltimo elemento.
      (ultimo (rest pilha)))) ; Continua a busca recursivamente.



; Fun√ß√£o recursiva que auxiliar o desempilha.
(define (desempilha-rec pilha)
  (cond
    [(empty? (rest pilha))
     '()]

    [else
     (cons (first pilha) (desempilha-rec (rest pilha)))]
    )
  )


; Fun√ß√£o de empilhar
(define (empilha item)
  (cond
    [(equal? item void)
     void]

    [else
     (set! pilha-limpa (append pilha-limpa (list item)))
     (set! lavar void)]
    )
  )


(define (concluido-pilha?)
  (cond
    [(resolver-enigma (Enigma-solucao prato) pilha-limpa)
     (altera-estado-prato)
     (altera-estado-pia-sup)
     (add-item (get-enigma-efei prato))
     ; Inicia o di√°logo da descri√ß√£o do Enigma Pilha de Pratos
     (iniciar-sequencia-dialogos (get-narrador) (Dialogo-finais-pilha enigma-feito))]

    [else
     void]
    ) 
  )



